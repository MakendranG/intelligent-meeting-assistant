# Intelligent Meeting Assistant Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Speech Recognition Services
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_region
GOOGLE_SPEECH_CREDENTIALS=path/to/google-credentials.json

# Task Management Integrations
ASANA_ACCESS_TOKEN=your_asana_token
TRELLO_API_KEY=your_trello_key
TRELLO_TOKEN=your_trello_token
JIRA_API_TOKEN=your_jira_token
JIRA_BASE_URL=https://your-domain.atlassian.net
MONDAY_API_TOKEN=your_monday_token

# Calendar Integrations
GOOGLE_CALENDAR_CREDENTIALS=path/to/google-calendar-credentials.json
MICROSOFT_GRAPH_CLIENT_ID=your_client_id
MICROSOFT_GRAPH_CLIENT_SECRET=your_client_secret

# Meeting Platform Integrations
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret
TEAMS_APP_ID=your_teams_app_id
TEAMS_APP_SECRET=your_teams_app_secret
SLACK_BOT_TOKEN=your_slack_bot_token

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/meeting_assistant
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_key

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Storage
STORAGE_TYPE=local
AWS_S3_BUCKET=your-s3-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Notification Services
SENDGRID_API_KEY=your_sendgrid_key
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Analytics and Monitoring
ANALYTICS_ENABLED=true
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn